{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "CommonJS",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "stripInternal": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@ncstate/sat-popover": ["dist/popover"],
      "core-js/es7/reflect": [
        "node_modules/core-js/proposals/reflect-metadata",
        "node_modules/core-js/es/reflect"
      ],
      "core-js/es6/*": [
        "node_modules/core-js/es"
      ]
    }
  }
}
